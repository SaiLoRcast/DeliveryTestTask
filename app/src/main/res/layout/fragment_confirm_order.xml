<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="16dp"
            android:layout_height="16sp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/close"
            android:layout_weight="2"
            android:fontFamily="@font/roboto_medium"
            android:text="Подтверждение заказа"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_white">

        <TextView
            android:id="@+id/confirm_delivery_from_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="21dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/confirm_delivery_from_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_calendar"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="21dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <ImageView
            android:src="@drawable/ic_arrow_down"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/confirm_delivery_to_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="21dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/confirm_delivery_to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_calendar"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="21dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/delivery_final_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="16dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="23sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/background_white"
            android:text="Отмена"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/create_order"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/next_button"
            android:text="Далее"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>